{
  "name": "n8n-nodes-polymesh",
  "version": "1.0.0",
  "description": "n8n community nodes for Polymesh - Institutional-grade security token blockchain with identity, compliance, and settlement",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "polymesh",
    "blockchain",
    "security-token",
    "defi",
    "compliance",
    "settlement",
    "identity",
    "did",
    "cdd",
    "corporate-actions",
    "dividends",
    "substrate"
  ],
  "license": "BUSL-1.1",
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-polymesh",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-polymesh.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/PolymeshNetwork.credentials.js",
      "dist/credentials/PolymeshMiddleware.credentials.js",
      "dist/credentials/CddProvider.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Polymesh/Polymesh.node.js",
      "dist/nodes/Polymesh/PolymeshTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.55.0",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "*",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@polymeshassociation/polymesh-sdk": "^24.0.0",
    "@polkadot/api": "^10.11.0",
    "@polkadot/util-crypto": "^12.6.0",
    "@polkadot/keyring": "^12.6.0",
    "graphql-request": "^6.1.0",
    "axios": "^1.6.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
